@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("Search", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <br />
    <br />
    <br />
    <br />
    <h2 style="text-align:center">Welcome to Online Course Portal. You can explore variety of courses offered here to gain knowledge.<br/>
    Search Courses Offered here</h2>
    <br/>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div style="text-align:center"class="form-group">
        <div class="col-md-12">
            <input required type="text" class="searchbox-form-control" name="searchString" />
            <input style="font-size:large" type="submit" class="btn btn-default" value="Search" />
        </div>

    </div>
}

<div style="font-size:small">
    Check all the courses @Html.ActionLink("here", "ListCourses", "Home").
</div>

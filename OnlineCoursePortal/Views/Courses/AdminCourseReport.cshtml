@model OnlineCoursePortal.Models.CourseReport

@{
    ViewBag.Title = "AdminReports";
}

<h2>Admin Course Report</h2>
<br />
@using (Html.BeginForm("CourseReports", "Courses", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label class = "col-md-2 control-label">Course Name </label>
        <div class="col-md-10">
            @Html.DropDownList("CourseID",
                            new SelectList(
                                Model.courseList,
                           "CourseID", "CourseName"),
                           new { onchange = "getAlldata()" })
        </div>
    </div>
    <div class="form-group">
        <input type="submit" class="btn" value="Get Report" />
    </div>
}

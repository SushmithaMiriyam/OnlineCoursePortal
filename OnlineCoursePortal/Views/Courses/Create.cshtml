@model OnlineCoursePortal.Models.Course
@{
    ViewBag.Title = "Add New Course";
}

<h2>Add New Course</h2>


@using (Html.BeginForm("CreateSections", "Courses", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Course Details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="col-md-2 control-label">Course Name</label>
            <div class="col-md-10">
                <input type="text" class="form-control" required name="CourseName" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Course Category</label>
            <div class="col-md-10">
            <input type="text" class="form-control" required name="Category" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Total Points for Assignment </label>
            <div class="col-md-10">
                <input required class="form-control" type="number" name="Totalpoints" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Course Summary</label>
            <div class="col-md-10">
            <textarea name="CourseSummary" class="form-control" required></textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Total Sections</label>
            <div class="col-md-10">
                <select class="form-control"  name="TotalSections" id="TotalSec">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Next" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
